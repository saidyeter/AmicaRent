<script type="text/javascript">
    document.addEventListener("DOMContentLoaded", function () {
        var menuItem = document.querySelector('#solmenu-cari-liste');
        menuItem.classList.add('active');
        var subMenuItem = menuItem.querySelector('#solmenu-cari-liste-Cari');
        subMenuItem.classList.add('active');
    });

    function CreateSelect2Manuel(key) {
        var fn = Function(
            `var element = document.getElementById("select2Area${key}");
        element.innerHTML = '<select id="${key}_ID" name="${key}_ID" class="form-control"></select>';
        makeSelect2("#${key}_ID", "/Root/${key}List");`);
        fn();
    }


    function CreateSelect2LocalCariUyruk() {
        var element = document.getElementById("select2AreaCari_Uyruk");
        element.innerHTML = '<select id="Cari_UyrukID" name="Cari_UyrukID" class="form-control"></select>';
        makeSelect2("#Cari_UyrukID", "/Root/CariUyrukList")
    }
</script>
